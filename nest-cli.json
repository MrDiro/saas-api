{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true
  },
  "projects": {
    "db-postgres": {
      "type": "library",
      "root": "libs/db-postgres",
      "entryFile": "index",
      "sourceRoot": "libs/db-postgres/src",
      "compilerOptions": {
        "tsConfigPath": "libs/db-postgres/tsconfig.lib.json"
      }
    },
    "ntf-email": {
      "type": "library",
      "root": "libs/ntf-email",
      "entryFile": "index",
      "sourceRoot": "libs/ntf-email/src",
      "compilerOptions": {
        "tsConfigPath": "libs/ntf-email/tsconfig.lib.json"
      }
    }
  }
}